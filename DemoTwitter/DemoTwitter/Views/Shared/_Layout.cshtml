@using System.Web.Optimization
<html>
<head>
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css/bootstrap.min.css")
    @Styles.Render("~/Content/css/index.css")

    @Scripts.Render("~/Content/js/jquery.js")
    @Scripts.Render("~/Content/js/bootstrap.min.js")
</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")"><a href="@Url.Action("Index", "User")"><span class="glyphicon glyphicon-home"></span> Home</a></li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "All" ? "active" : "")"><a href="@Url.Action("All", "User")">All users</a></li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "FollowedUsersFeed" ? "active" : "")"><a href="@Url.Action("FollowedUsersFeed", "Tweet")">Feed</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#"><span class="glyphicon glyphicon-edit"></span> Options</a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("Edit", "User")">Edit profile</a></li>
                            <li><a href="@Url.Action("Remove", "User")">Delete profile</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="@Url.Action("Logout", "User")"><span class="glyphicon glyphicon-log-out"></span> Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    @RenderBody()
</body>
</html>

