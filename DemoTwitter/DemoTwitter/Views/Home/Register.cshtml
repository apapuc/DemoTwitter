@using System.Web.Optimization
@model DemoTwitter.Models.User

@{
    Layout = null;
}
@Styles.Render("~/Content/css/bootstrap.css")
@Styles.Render("~/Content/css/login.css")
@Styles.Render("~/Content/css/validation.css")

<body class="panel-body" style="background-image: url('http://synthetick.com/poster-1280x720/plexus3-1280x720.jpg'); background-size: cover;">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="panel panel-login">
                    <div class="panel-heading">

                        <div class="panel-body">
                            <div class="row">
                                <div class="col-xs-3">
                                    <a href=@Url.Action("Login", "Home")  id="login-form-link">Login</a>
                                </div>
                                <div class="col-xs-3">
                                    <a href=@Url.Action("Register", "Home") class="active" id="register-form-link">Register</a>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                @using (Html.BeginForm("Register", "Home", FormMethod.Post, new { enctype = "multipart/form-data", @id = "register-form", @role = "form", @style = "display: block;" }))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true)
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.Username, new { @name = "username", @tabindex = "1", @id = "username", @class = "form-control", @placeholder = "Username" })
                                        <div class="alert" style="color: red;">@Html.ValidationMessageFor(m => m.Username)</div>
                                    </div>
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.Email, new { @name = "email", @tabindex = "2", @id = "email", @class = "form-control", @placeholder = "Email" })
                                        <div class="alert" style="color: red;">@Html.ValidationMessageFor(m => m.Email)</div>
                                    </div>
                                    <div class="form-group">
                                        @Html.PasswordFor(m => m.Password, new { @name = "password", @tabindex = "3", @id = "password", @class = "form-control", @placeholder = "Password" })
                                        <div class="alert" style="color: red;">@Html.ValidationMessageFor(m => m.Password)</div>
                                    </div>
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.FirstName, new { @name = "lastname", @tabindex = "4", @id = "lastname", @class = "form-control", @placeholder = "First Name" })
                                        <div class="alert" style="color: red;">@Html.ValidationMessageFor(m => m.LastName)</div>
                                    </div>
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.LastName, new { @name = "firstname", @tabindex = "5", @id = "firstname", @class = "form-control", @placeholder = "Last Name" })
                                        <div class="alert" style="color: red;">@Html.ValidationMessageFor(m => m.FirstName)</div>
                                    </div>
                                    @Html.TextBoxFor(m => m.Avatar, new { @name = "avatar", @tabindex = "6", @id = "avatar", @type = "file" })
                                    
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-sm-6 col-sm-offset-3">
                                                <input type="submit" name="login-submit" id="login-submit" tabindex="6" class="form-control btn-login btn-register" value="Register">
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
