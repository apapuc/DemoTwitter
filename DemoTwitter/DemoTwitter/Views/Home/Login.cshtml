@using System.Web.Optimization
@model DemoTwitter.WEB.Models.LoginUser

@{
    Layout = null;
}
@Styles.Render("~/Content/css/bootstrap.css", "~/Content/css/login.css")
@Styles.Render("~/Content/css/validation.css")


<body class="panel-body" style="background-image: url('http://synthetick.com/poster-1280x720/plexus3-1280x720.jpg'); background-size: cover;">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="panel panel-login">
                    <div class="panel-heading">

                        <div class="panel-body">
                            <div class="row">
                                <div class="col-xs-3">
                                    <a href=@Url.Action("Login", "Home") class="active" id="login-form-link">Login</a>
                                </div>
                                <div class="col-xs-3">
                                    <a href=@Url.Action("Register", "Home") id="register-form-link">Register</a>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @id = "login-form", @role = "form", @style = "display: block;" }))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true)
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.Email, new { @name = "email", @tabindex = "1", @id = "email", @class = "form-control", @placeholder = "Email" })
                                        <div class="alert" style="color: red;">@Html.ValidationMessageFor(m => m.Email)</div>
                                    </div>
                                    <div class="form-group">
                                        @Html.PasswordFor(m => m.Password, new { @name = "password", @tabindex = "2", @id = "password", @class = "form-control", @placeholder = "Password" })
                                        <div class="alert" style="color: red;">@Html.ValidationMessageFor(m => m.Password)</div>
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-sm-6 col-sm-offset-3">
                                                <input type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control btn-login" value="Login">
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
