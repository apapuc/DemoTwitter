@using System.Web.Optimization
@model DemoTwitter.Models.User

@{
    Layout = null;
}
@Styles.Render("~/Content/css/bootstrap.min.css")
@Styles.Render("~/Content/css/tableStyle.css")



<!DOCTYPE html>

<html>
<head>
    <title>Twitter</title>.

</head>
<body style="background: #f4f7f9">
    <div>
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">

                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>

                    <a class="navbar-brand" href="#">
                        @if (Session["UserFullName"] != null)
                        {<span>
                                Welcome, @Session["UserFullName"].ToString()
                        </span>
                        }
                    </a>
                </div>
                <div class="collapse navbar-collapse" id="myNavbar">
                    <ul class="nav navbar-nav">
                        <li class="active"><a href="@Url.Action("Index", "User")">Home</a></li>

                        <li><a href="#">Page 2</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-cog"></span>Options</a>
                            <ul class="dropdown-menu">
                                <li><a href="@Url.Action("Edit", "User")">Update profile information</a></li>
                                <li><a href=@Url.Action("All", "User")>Show all users</a></li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href=@Url.Action("Logout", "User")><span class="glyphicon glyphicon-log-out"></span>Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>

    <div class="row">
        @using (Html.BeginForm("Edit", "User", FormMethod.Post, new { @id = "edit-form", @role = "form", @style = "display: block;" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.TextBoxFor(m => m.Username, new { @name = "username", @tabindex = "1", @id = "username", @class = "form-control", @placeholder = "Username" })
                <div class="alert" style="color: red;">@Html.ValidationMessageFor(m => m.Username)</div>
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.Email, new { @name = "email", @tabindex = "2", @id = "email", @class = "form-control", @placeholder = "Email" })
                <div class="alert" style="color: red;">@Html.ValidationMessageFor(m => m.Email)</div>
            </div>
            <div class="form-group">
                @Html.PasswordFor(m => m.Password, new { @name = "password", @tabindex = "3", @id = "password", @class = "form-control", @placeholder = "Password" })
                <div class="alert" style="color: red;">@Html.ValidationMessageFor(m => m.Password)</div>
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.FirstName, new { @name = "lastname", @tabindex = "4", @id = "lastname", @class = "form-control", @placeholder = "First Name" })
                <div class="alert" style="color: red;">@Html.ValidationMessageFor(m => m.FirstName)</div>
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.LastName, new { @name = "firstname", @tabindex = "5", @id = "firstname", @class = "form-control", @placeholder = "First Name" })
                <div class="alert" style="color: red;">@Html.ValidationMessageFor(m => m.LastName)</div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-6 col-sm-offset-3">
                        <a href="@Url.Action("Edit", "User")" type="submit" name="login-submit" id="login-submit" tabindex="6" class="form-control btn-login btn-register" value="Save">Save</a>
                    </div>
                </div>
            </div>
        }
    </div>

</body>
</html>
