@model PagedList.IPagedList<DemoTwitter.Models.Tweet>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Twitter | Feed";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="tweetsbox col-md-5">
    <ol style="list-style: none">
        @foreach (var tweet in Model)
        {
            <li class="tweet">
                <div class="tweet-header">
                    <div class="tweetform-header">@tweet.PostDate</div>
                    <div><span>by </span>@tweet.Author</div>
                </div>
                <div class="tweet-text">@tweet.Text</div>
            </li>
        }
    </ol>
    @if (Model.Count == 0)
    {
        <div class="text-center">
            <img src="https://s-media-cache-ak0.pinimg.com/236x/c3/40/97/c34097b924a3a063eaedfcc47a7e336f.jpg" alt="no data" />
            <h2>Nothing to show here. You can <a href="@Url.Action("All", "User")">follow</a> someone to see his activity.</h2>
        </div>
        
    }
    else
    {
        <div>Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount</div>
        <div>@Html.PagedListPager(Model, page => Url.Action("FollowedUsersFeed", "Tweet", new { page }))</div>
    }
</div>
