@using System.Web.Optimization
@model DemoTwitter.Models.Tweet

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Twitter</title>
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.2/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
</head>
<body style="background: #f4f7f9">
    <div>
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                    
                    <a class="navbar-brand" href="#">
                        @if (Session["UserFullName"] != null)
                        {
                            <span>Welcome, @Session["UserFullName"].ToString()
                            </span>
                        }
                    </a>
                </div>
                <div class="collapse navbar-collapse" id="myNavbar">
                    <ul class="nav navbar-nav">
                        <li class="active"><a href="#">Home</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-cog"></span>Options</a>
                            <ul class="dropdown-menu">
                                <li><a href="#">Update profile information</a></li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href=@Url.Action("Logout", "User")><span class="glyphicon glyphicon-log-out"></span>Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
    <div class="col-md-8 tweetform">

        @using (Html.BeginForm("Index", "Tweet", FormMethod.Post))
        {
            @Html.ValidationSummary(true)
            {
            
            @Html.TextAreaFor(model => model.Text, new { @placeholder = "What's on your mind...", @class = "form-control tweet-textarea", @style = "max-width: 1090px", @maxlength = 140, @required = true })
            
            }
            <input type="submit" name="login-submit" id="login-submit" class="btn post-btn" value="Post" />
        }
    </div>


    @{Html.RenderAction("AllTweets", "Tweet");}

</body>
</html>
